---
export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
  url?: string;
  type?: 'website' | 'article' | 'product';
  author?: string;
  publishedTime?: string;
  modifiedTime?: string;
  siteName?: string;
  locale?: string;
}

const {
  title = 'NextGrowth - AI驱动的全球营销解决方案',
  description = 'NextGrowth是领先的AI营销公司，专注于为企业提供数据驱动的全球化营销策略、智能内容营销和品牌出海解决方案。',
  keywords = 'AI营销,数字营销,全球化营销,品牌出海,数据分析,内容营销,营销自动化,NextGrowth',
  image = '/og-image.jpg',
  url = Astro.url.href,
  type = 'website',
  author = 'NextGrowth',
  publishedTime,
  modifiedTime,
  siteName = 'NextGrowth',
  locale = 'zh_CN'
} = Astro.props;

// 构建完整的图片URL
const fullImageUrl = image.startsWith('http') ? image : new URL(image, Astro.url.origin).href;

// 构建结构化数据
const structuredData = {
  '@context': 'https://schema.org',
  '@type': type === 'article' ? 'Article' : 'Organization',
  name: siteName,
  url: url,
  logo: {
    '@type': 'ImageObject',
    url: new URL('/logo.svg', Astro.url.origin).href
  },
  description: description,
  ...(type === 'article' && {
    headline: title,
    image: fullImageUrl,
    author: {
      '@type': 'Organization',
      name: author
    },
    publisher: {
      '@type': 'Organization',
      name: siteName,
      logo: {
        '@type': 'ImageObject',
        url: new URL('/logo.svg', Astro.url.origin).href
      }
    },
    ...(publishedTime && { datePublished: publishedTime }),
    ...(modifiedTime && { dateModified: modifiedTime })
  }),
  ...(type === 'website' && {
    '@type': 'Organization',
    name: siteName,
    alternateName: 'NextGrowth AI Marketing',
    url: url,
    logo: new URL('/logo.svg', Astro.url.origin).href,
    contactPoint: {
      '@type': 'ContactPoint',
      telephone: '+86-400-123-4567',
      contactType: 'Customer Service',
      availableLanguage: ['Chinese', 'English']
    },
    sameAs: [
      'https://www.linkedin.com/company/nextgrowth',
      'https://twitter.com/nextgrowth',
      'https://www.facebook.com/nextgrowth'
    ],
    foundingDate: '2020',
    numberOfEmployees: '50-100',
    industry: 'Marketing and Advertising',
    description: description
  })
};
---

<!-- 基础 Meta 标签 -->
<title>{title}</title>
<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<meta name="author" content={author} />
<meta name="robots" content="index, follow" />
<meta name="language" content="zh-CN" />
<meta name="revisit-after" content="7 days" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullImageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content={locale} />
{publishedTime && <meta property="article:published_time" content={publishedTime} />}
{modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
{author && <meta property="article:author" content={author} />}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={url} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={fullImageUrl} />
<meta name="twitter:creator" content="@nextgrowth" />
<meta name="twitter:site" content="@nextgrowth" />

<!-- 移动端优化 -->
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="format-detection" content="telephone=no" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
<meta name="apple-mobile-web-app-title" content={siteName} />

<!-- 网站图标 -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" type="image/png" href="/favicon.png" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/site.webmanifest" />

<!-- 预连接到外部资源 -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link rel="preconnect" href="https://images.unsplash.com" />

<!-- DNS 预取 -->
<link rel="dns-prefetch" href="https://www.google-analytics.com" />
<link rel="dns-prefetch" href="https://www.googletagmanager.com" />

<!-- 规范链接 -->
<link rel="canonical" href={url} />

<!-- 结构化数据 -->
<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

<!-- 额外的 SEO 优化 -->
<meta name="theme-color" content="#2563eb" />
<meta name="msapplication-TileColor" content="#2563eb" />
<meta name="msapplication-config" content="/browserconfig.xml" />

<!-- 安全性 -->
<meta http-equiv="X-Content-Type-Options" content="nosniff" />
<meta http-equiv="X-Frame-Options" content="DENY" />
<meta http-equiv="X-XSS-Protection" content="1; mode=block" />
<meta http-equiv="Referrer-Policy" content="strict-origin-when-cross-origin" />

<!-- 性能优化 -->
<meta http-equiv="Cache-Control" content="public, max-age=31536000" />

<style>
  /* 关键 CSS 内联以提高首屏渲染速度 */
  html {
    scroll-behavior: smooth;
  }
  
  body {
    font-display: swap;
  }
  
  /* 预加载关键字体 */
  @font-face {
    font-family: 'Inter';
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url('https://fonts.gstatic.com/s/inter/v12/UcCO3FwrK3iLTeHuS_fvQtMwCp50KnMw2boKoduKmMEVuLyfAZ9hiJ-Ek-_EeA.woff2') format('woff2');
  }
</style>