---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { wordpressAPI, formatDate, getFeaturedImageUrl } from '../../lib/wordpress.ts';
import type { WordPressPost, WordPressCategory } from '../../lib/wordpress.ts';

export async function getStaticPaths() {
  try {
    // 获取所有文章用于生成静态路径
    const posts = await wordpressAPI.getPosts({
      per_page: 100, // 获取更多文章
      orderby: 'date',
      order: 'desc'
    });

    return posts.map((post) => ({
      params: { slug: post.slug },
      props: { post },
    }));
  } catch (error) {
    console.error('Failed to fetch posts for static paths:', error);
    // 返回一些模拟路径作为后备
    return [
      {
        params: { slug: 'ai-marketing-automation' },
        props: {
          post: {
            id: 1,
            title: { rendered: "AI驱动的营销自动化：未来已来" },
            content: { rendered: "<p>这是一篇关于AI营销自动化的详细文章内容...</p>", protected: false },
            excerpt: { rendered: "探索人工智能如何革命性地改变营销策略，提升客户体验和转化率。", protected: false },
            date: "2024-01-15T00:00:00",
            slug: "ai-marketing-automation",
            categories: [1],
            featured_media: 0
          }
        }
      }
    ];
  }
}

const { post } = Astro.props;

// 获取文章分类信息
let categories: WordPressCategory[] = [];
let featuredImageUrl: string | null = null;

try {
  categories = await wordpressAPI.getCategories();
  if (post.featured_media) {
    featuredImageUrl = await getFeaturedImageUrl(post.featured_media);
  }
} catch (error) {
  console.error('Failed to fetch additional post data:', error);
}

const postCategories = categories.filter(cat => post.categories.includes(cat.id));

// 生成 SEO 元数据
function generateExcerpt(content: string, length: number): string {
  return content.replace(/<[^>]*>/g, '').substring(0, length).trim();
}

const excerpt = generateExcerpt(post.content.rendered, 160);
const publishedDate = new Date(post.date).toISOString();
const modifiedDate = new Date(post.date).toISOString();
---

<Layout 
  title={post.title.rendered}
  description={excerpt}
  keywords={postCategories.map(cat => cat.name).join(', ')}
  image={featuredImageUrl}
  type="article"
  author="NextGrowth"
  publishedTime={publishedDate}
  modifiedTime={modifiedDate}
>
  <Navigation />
  
  <main>
    <!-- 文章头部 -->
    <section class="pt-24 pb-12 bg-gradient-to-br from-blue-50 to-purple-50">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <!-- 面包屑导航 -->
          <nav class="flex items-center space-x-2 text-sm text-gray-600 mb-6">
            <a href="/" class="hover:text-blue-600 transition-colors">首页</a>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <a href="/blog" class="hover:text-blue-600 transition-colors">博客</a>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-gray-400">当前文章</span>
          </nav>

          <!-- 文章分类 -->
          <div class="flex flex-wrap gap-2 mb-4">
            {postCategories.map((category) => (
              <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">
                {category.name}
              </span>
            ))}
          </div>

          <!-- 文章标题 -->
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
            {post.title.rendered}
          </h1>

          <!-- 文章元信息 -->
          <div class="flex items-center gap-6 text-gray-600">
            <div class="flex items-center gap-2">
              <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                <span class="text-white font-medium">N</span>
              </div>
              <div>
                <p class="font-medium text-gray-900">NextGrowth</p>
                <p class="text-sm">AI营销专家</p>
              </div>
            </div>
            <div class="flex items-center gap-1">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
              </svg>
              <span>{formatDate(post.date)}</span>
            </div>
            <div class="flex items-center gap-1">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
              </svg>
              <span>5分钟阅读</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 特色图片 -->
    {(featuredImageUrl || post.featured_media) && (
      <section class="py-8">
        <div class="container-custom">
          <div class="max-w-4xl mx-auto">
            <div class="aspect-video rounded-2xl overflow-hidden shadow-lg">
              <img 
                src={featuredImageUrl || `https://images.unsplash.com/photo-1485827404703-89b55fcc595e?w=800&h=450&fit=crop`}
                alt={post.title.rendered}
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- 文章内容 -->
    <section class="py-12">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <div class="prose prose-lg max-w-none">
            <div set:html={post.content.rendered} class="
              prose-headings:text-gray-900 prose-headings:font-bold
              prose-p:text-gray-700 prose-p:leading-relaxed
              prose-a:text-blue-600 prose-a:no-underline hover:prose-a:underline
              prose-strong:text-gray-900
              prose-ul:text-gray-700
              prose-ol:text-gray-700
              prose-li:text-gray-700
              prose-blockquote:border-l-4 prose-blockquote:border-blue-500 prose-blockquote:bg-blue-50 prose-blockquote:p-4 prose-blockquote:rounded-r-lg
              prose-code:bg-gray-100 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm
              prose-pre:bg-gray-900 prose-pre:text-gray-100
              prose-img:rounded-lg prose-img:shadow-md
            "></div>
          </div>
        </div>
      </div>
    </section>

    <!-- 分享和导航 -->
    <section class="py-12 bg-gray-50">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <!-- 分享按钮 -->
          <div class="bg-white rounded-2xl p-8 shadow-sm mb-8">
            <h3 class="text-xl font-bold text-gray-900 mb-4">分享这篇文章</h3>
            <div class="flex gap-4">
              <button class="flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                </svg>
                Twitter
              </button>
              <button class="flex items-center gap-2 px-4 py-2 bg-blue-800 text-white rounded-lg hover:bg-blue-900 transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                LinkedIn
              </button>
              <button class="flex items-center gap-2 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                </svg>
                WhatsApp
              </button>
            </div>
          </div>

          <!-- 返回博客列表 -->
          <div class="text-center">
            <a 
              href="/blog" 
              class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              返回博客列表
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .prose {
    @apply text-gray-700;
  }
  
  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    @apply text-gray-900 font-bold mt-8 mb-4;
  }
  
  .prose h1 {
    @apply text-3xl;
  }
  
  .prose h2 {
    @apply text-2xl;
  }
  
  .prose h3 {
    @apply text-xl;
  }
  
  .prose p {
    @apply mb-4 leading-relaxed;
  }
  
  .prose ul, .prose ol {
    @apply mb-4 pl-6;
  }
  
  .prose li {
    @apply mb-2;
  }
  
  .prose blockquote {
    @apply border-l-4 border-blue-500 bg-blue-50 p-4 rounded-r-lg my-6 italic;
  }
  
  .prose img {
    @apply rounded-lg shadow-md my-6;
  }
  
  .prose code {
    @apply bg-gray-100 px-2 py-1 rounded text-sm;
  }
  
  .prose pre {
    @apply bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto my-6;
  }
</style>